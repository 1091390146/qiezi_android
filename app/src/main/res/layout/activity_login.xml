<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    >
    <TextView
        android:id="@+id/edit_view"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:background="@drawable/user_name"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/edit_view2"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:background="@drawable/password"
        android:layout_marginTop="@dimen/activity_size_24"

        android:layout_below="@+id/edit_view"
        android:layout_alignLeft="@+id/edit_view"
        />
    <EditText
        android:layout_width="254dp"
        android:layout_height="48dp"
        android:background="@null"
        android:hint="请输入用户名"
        android:layout_alignBottom="@+id/edit_view"
        android:layout_alignRight="@+id/edit_view"

        android:id="@+id/login_phonenum" />
    <EditText
        android:layout_width="254dp"
        android:layout_height="48dp"
        android:background="@null"
        android:hint="请输入密码"
        android:layout_alignBottom="@+id/edit_view2"
        android:layout_alignRight="@+id/edit_view2"
        android:id="@+id/login_Password"
        android:inputType="textPassword" />

    <Button
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:layout_below="@+id/edit_view2"
        android:background="@drawable/login_button"
        android:layout_marginTop="27dp"
        android:layout_alignLeft="@+id/edit_view2"
        android:text="登录"
        android:textSize="23sp"
        android:textColor="#36be64"
        android:id="@+id/login_login" />
    <ImageView
        android:id="@+id/user_small"
        android:layout_width="27dp"
        android:layout_height="34dp"
        android:background="@drawable/user_small"

        android:layout_alignTop="@+id/edit_view"
        android:layout_alignLeft="@+id/edit_view"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        />

    <ImageView
        android:id="@+id/small_password"
        android:layout_width="27dp"
        android:layout_height="34dp"
        android:background="@drawable/small_password"

        android:layout_alignTop="@+id/edit_view2"
        android:layout_alignLeft="@+id/edit_view2"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        />

    <ImageView
        android:id="@+id/left_jiantou"
        android:background="@drawable/left_jiantou"
        android:layout_height="10dp"
        android:layout_width="6dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="33dp"
        />
    <TextView
        android:id="@+id/tv_login_forgetpassword"
        android:layout_width="70dp"
        android:layout_height="17dp"
        android:text="忘记密码？"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="29.2dp"
        android:textColor="#36be64"
        />


    <ImageView
        android:id="@+id/right_jiantou"
        android:background="@drawable/right_jiantou"
        android:layout_height="10dp"
        android:layout_width="6dp"

        android:layout_alignBottom="@+id/left_jiantou"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"


        />
    <TextView
        android:id="@+id/tv_login_register"
        android:layout_width="70dp"
        android:layout_height="17dp"
        android:text="注册"
        android:textColor="#36be64"
        android:layout_alignTop="@+id/tv_login_forgetpassword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="-13dp"/>





</RelativeLayout>
